{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es2015"
		],
		"outDir": "lib",
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"moduleResolution": "node",
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"alwaysStrict": true
	},
	"include": [
		"src/**/*.ts"
	]
}
